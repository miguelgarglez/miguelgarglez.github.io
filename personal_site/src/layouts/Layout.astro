---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/personal_site/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <title>Miguel García</title>
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

<script is:inline>
  // Detectar preferencia del sistema
  const systemPrefersLight = window.matchMedia(
    '(prefers-color-scheme: light)'
  ).matches;

  // Siempre usar la preferencia del sistema al cargar
  if (systemPrefersLight) {
    document.body.classList.add('light');
  }

  // Escuchar cambios en la preferencia del sistema y aplicarlos automáticamente
  window
    .matchMedia('(prefers-color-scheme: light)')
    .addEventListener('change', (e) => {
      if (e.matches) {
        document.body.classList.add('light');
      } else {
        document.body.classList.remove('light');
      }
    });
</script>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
