---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/personal_site/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap"
    />

    <title>Miguel García</title>
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

<script is:inline>
  // Detectar preferencia del sistema
  const systemPrefersLight = window.matchMedia(
    '(prefers-color-scheme: light)'
  ).matches;

  // Siempre usar la preferencia del sistema al cargar
  if (systemPrefersLight) {
    document.body.classList.add('light');
  }

  // Escuchar cambios en la preferencia del sistema y aplicarlos automáticamente
  window
    .matchMedia('(prefers-color-scheme: light)')
    .addEventListener('change', (e) => {
      if (e.matches) {
        document.body.classList.add('light');
      } else {
        document.body.classList.remove('light');
      }
    });
</script>

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
  }
  * {
    box-sizing: border-box;
  }

  /* Asegurar que ningún elemento cause scroll horizontal */
  body {
    max-width: 100vw;
    font-family: var(--font-body);
    background: var(--bg);
    color: var(--text);
  }

  :root {
    --font-body: "Space Grotesk", "Helvetica Neue", Arial, sans-serif;
    --font-display: "Sora", "Space Grotesk", "Helvetica Neue", Arial, sans-serif;
    --bg-dark: #09090b;
    --bg: #0b0b0e;
    --bg-light: #15151a;
    --text: #f8f4ee;
    --text-muted: #b6aea3;
    --highlight: #2a231a;
    --border: #2b2420;
    --border-muted: #1f1a16;
    --primary: #f2a93b;
    --secondary: #7bb0ff;
    --danger: #e66b6b;
    --warning: #f2c84b;
    --success: #5bd69f;
    --info: #78b0ff;
    --radius-sm: 10px;
    --radius-md: 14px;
    --radius-lg: 20px;
    --shadow-soft: 0 18px 50px rgba(0, 0, 0, 0.35);
    --shadow-card: 0 14px 30px rgba(0, 0, 0, 0.2);
    --shadow-glow: 0 0 40px rgba(242, 169, 59, 0.2);
    --container-max: 1120px;
  }
  body.light {
    --bg-dark: #f7f1e8;
    --bg: #fdf9f2;
    --bg-light: #ffffff;
    --text: #1c1b19;
    --text-muted: #5c524a;
    --highlight: #f1e4d2;
    --border: #e3d3be;
    --border-muted: #f0e4d6;
    --primary: #b06a06;
    --secondary: #2a5fb5;
    --danger: #b54343;
    --warning: #b9860c;
    --success: #2f8a61;
    --info: #2d6ab7;
    --shadow-soft: 0 18px 50px rgba(69, 50, 30, 0.15);
    --shadow-card: 0 14px 30px rgba(69, 50, 30, 0.12);
    --shadow-glow: 0 0 30px rgba(176, 106, 6, 0.18);
  }

  .page-shell {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 24px;
  }

  .section {
    padding: 96px 0;
  }

  .section-title {
    font-size: clamp(1.8rem, 3vw, 2.6rem);
    margin-bottom: 40px;
    text-align: center;
    color: var(--text);
  }

  .card {
    background: var(--bg-light);
    border: 1px solid var(--border-muted);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-card);
  }
</style>
