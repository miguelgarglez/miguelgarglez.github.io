---
import Chat from '../chat/Chat';

const workerUrl = import.meta.env.DEV
  ? import.meta.env.DEV_PUBLIC_WORKER_CHAT_URL
  : import.meta.env.PUBLIC_WORKER_CHAT_URL;
---

<section id="chat" class="section">
  <div class="page-shell">
    <div class="mx-auto flex w-full max-w-4xl flex-col gap-6 px-4 pt-6 sm:px-6 sm:pt-8 lg:px-0">
      <Chat apiUrl={workerUrl} client:visible />
    </div>
  </div>
</section>
