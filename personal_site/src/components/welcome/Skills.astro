<script>
  import gsap from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // Establecer estado inicial para las animaciones
    gsap.set('#skills .section-title', { y: 50, opacity: 0 });
    gsap.set('#skills .skill-category', { y: 60, opacity: 0 });
    gsap.set('#skills .skill-item', { x: -30, opacity: 0 });
    gsap.set('#skills .philosophy', { scale: 0.9, opacity: 0 });

    // Animación del título
    gsap.to('#skills .section-title', {
      y: 0,
      opacity: 1,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '#skills',
        start: 'top 70%',
        end: 'bottom 70%',
        toggleActions: 'play none none reverse',
      },
    });

    // Animación de las categorías
    gsap.to('#skills .skill-category', {
      y: 0,
      opacity: 1,
      duration: 0.8,
      stagger: 0.2,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '#skills .skills-grid',
        start: 'top 80%',
        end: 'bottom 80%',
        toggleActions: 'play none none reverse',
      },
    });

    // Animación de los skill items
    gsap.to('#skills .skill-item', {
      x: 0,
      opacity: 1,
      duration: 0.6,
      stagger: 0.1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '#skills .skills-grid',
        start: 'top 70%',
        end: 'bottom 70%',
        toggleActions: 'play none none reverse',
      },
    });

    // Animación de la filosofía
    gsap.to('#skills .philosophy', {
      scale: 1,
      opacity: 1,
      duration: 1,
      ease: 'power2.out',
      scrollTrigger: {
        trigger: '#skills .philosophy',
        start: 'top 80%',
        end: 'bottom 80%',
        toggleActions: 'play none none reverse',
      },
    });
  });
</script>

