---
import { Icon } from 'astro-icon/components';
// No necesitamos importar la imagen ya que está en public
---

<section class="hero">
  <div class="hero-bg"></div>
  <div class="hero-orb hero-orb-primary"></div>
  <div class="hero-orb hero-orb-secondary"></div>
  <div class="page-shell hero-shell">
    <div class="hero-content">

      <div class="text-content">
        <h1 class="name">Miguel García</h1>
        <p class="title">Software Engineer</p>
      </div>

      <div class="contact-info">
        <span class="contact-chip">
          <Icon class="chip-icon" name="lucide:map-pin" aria-hidden="true" />
          Madrid, Spain
        </span>
        <a
          href="https://www.linkedin.com/in/miguel-garciag"
          target="_blank"
          rel="noreferrer"
          class="contact-chip"
        >
          <Icon class="chip-icon" name="lucide:linkedin" aria-hidden="true" />
          LinkedIn
        </a>
        <a
          href="https://x.com/miguel_garglez"
          target="_blank"
          rel="noreferrer"
          class="contact-chip"
        >
          <Icon
            class="chip-icon chip-icon-solid"
            name="simple-icons:x"
            aria-hidden="true"
          />
          X (Twitter)
        </a>
      </div>

      <div class="cta-buttons">
        <a href="#about" class="btn btn-primary">About Me</a>
        <a href="#contact" class="btn btn-secondary">Get in Touch</a>
      </div>
    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';

  // Esperar a que el DOM esté completamente cargado
  document.addEventListener('DOMContentLoaded', () => {
    // Establecer estado inicial para todos los elementos animados
    gsap.set('.name, .title', {
      y: 40,
      opacity: 0,
    });
    gsap.set('.contact-chip, .btn', { y: 20, opacity: 0 });

    // Animación de entrada del hero
    const tl = gsap.timeline();

    tl.to('.name', {
      y: 0,
      opacity: 1,
      duration: 0.7,
      ease: 'power2.out',
    })
      .to(
        '.title',
        {
          y: 0,
          opacity: 1,
          duration: 0.6,
          ease: 'power2.out',
        },
        '-=0.4'
      )
      .to(
        '.contact-chip',
        {
          y: 0,
          opacity: 1,
          duration: 0.4,
          stagger: 0.1,
          ease: 'power2.out',
        },
        '-=0.2'
      )
      .to(
        '.btn',
        {
          y: 0,
          opacity: 1,
          duration: 0.5,
          stagger: 0.1,
          ease: 'power2.out',
        },
        '-=0.1'
      );
  });
</script>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    position: relative;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(
        circle at top,
        rgba(242, 169, 59, 0.12),
        transparent 65%
      ),
      linear-gradient(135deg, var(--bg-dark), var(--bg) 55%, var(--bg-light));
    z-index: 0;
  }

  .hero-orb {
    position: absolute;
    border-radius: 999px;
    filter: blur(120px);
    opacity: 0.6;
    z-index: 0;
  }

  .hero-orb-primary {
    width: 520px;
    height: 520px;
    background: rgba(242, 169, 59, 0.18);
    top: -180px;
    right: -180px;
  }

  .hero-orb-secondary {
    width: 320px;
    height: 320px;
    background: rgba(123, 176, 255, 0.14);
    bottom: -140px;
    left: -120px;
  }

  .hero-shell {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 820px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.9rem;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.7rem;
  }

  .name {
    font-size: clamp(2.8rem, 5.5vw, 4.8rem);
    font-weight: 700;
    color: var(--text);
    margin: 0;
    letter-spacing: -0.02em;
    font-family: var(--font-display);
  }

  .title {
    font-size: clamp(1.2rem, 3.2vw, 1.9rem);
    color: var(--primary);
    margin: 0;
    font-weight: 600;
    font-family: var(--font-display);
  }

  .contact-info {
    display: flex;
    flex-wrap: wrap;
    gap: 0.9rem;
    justify-content: center;
    margin: 1rem 0 0.2rem;
  }

  .contact-chip {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 1rem;
    transition: all 0.3s ease;
    padding: 0.6rem 1.25rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.12);
    background: rgba(255, 255, 255, 0.06);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
    white-space: nowrap;
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.18);
  }

  body.light .contact-chip {
    border-color: rgba(176, 106, 6, 0.25);
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 12px 24px rgba(176, 106, 6, 0.08);
  }

  .contact-chip:hover {
    color: var(--text);
    border-color: rgba(242, 169, 59, 0.6);
    box-shadow: 0 18px 30px rgba(0, 0, 0, 0.25);
    transform: translateY(-2px);
  }

  .chip-icon {
    width: 1.05rem;
    height: 1.05rem;
    color: var(--primary);
    stroke: currentColor;
    stroke-width: 1.8;
    fill: none;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .chip-icon-solid {
    fill: currentColor;
    stroke: none;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1.6rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .btn {
    padding: 0.95rem 2.4rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    font-size: 1rem;
  }

  .btn-primary {
    background: var(--primary);
    color: #1c1306;
    box-shadow: 0 16px 28px rgba(0, 0, 0, 0.28);
  }

  .btn-primary:hover {
    background: #f1b455;
    transform: translateY(-2px) scale(1.02);
    box-shadow: 0 14px 26px rgba(0, 0, 0, 0.32);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: var(--text);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.12);
    color: var(--text);
    transform: translateY(-2px);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.24);
  }

  body.light .btn-primary {
    color: var(--bg);
    box-shadow: 0 12px 20px rgba(69, 50, 30, 0.18);
  }

  body.light .btn-secondary {
    background: rgba(255, 255, 255, 0.6);
    border-color: rgba(176, 106, 6, 0.35);
    color: var(--text);
  }

  body.light .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.85);
    border-color: rgba(176, 106, 6, 0.5);
    box-shadow: 0 12px 24px rgba(69, 50, 30, 0.18);
  }


  @media (max-width: 768px) {
    .hero {
      padding: 0;
    }

    .contact-info {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 240px;
    }
  }
</style>
