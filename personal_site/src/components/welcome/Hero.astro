<script>
  import gsap from 'gsap';

  // Esperar a que el DOM est√© completamente cargado
  document.addEventListener('DOMContentLoaded', () => {
    // Establecer estado inicial para todos los elementos animados
    gsap.set('.name, .title, .location', { y: 50, opacity: 0 });
    gsap.set('.contact-link, .btn', { y: 20, opacity: 0 });
    gsap.set('.avatar', { scale: 0, rotation: 180 });

    // Animaci√≥n de entrada del hero
    const tl = gsap.timeline();

    tl.to('.avatar', {
      scale: 1,
      rotation: 0,
      duration: 1,
      ease: 'back.out(1.7)',
    })
      .to(
        '.name',
        {
          y: 0,
          opacity: 1,
          duration: 0.8,
          ease: 'power2.out',
        },
        '-=0.5'
      )
      .to(
        '.title',
        {
          y: 0,
          opacity: 1,
          duration: 0.6,
          ease: 'power2.out',
        },
        '-=0.4'
      )
      .to(
        '.location',
        {
          y: 0,
          opacity: 1,
          duration: 0.5,
          ease: 'power2.out',
        },
        '-=0.3'
      )
      .to(
        '.contact-link',
        {
          y: 0,
          opacity: 1,
          duration: 0.4,
          stagger: 0.1,
          ease: 'power2.out',
        },
        '-=0.2'
      )
      .to(
        '.btn',
        {
          y: 0,
          opacity: 1,
          duration: 0.5,
          stagger: 0.1,
          ease: 'power2.out',
        },
        '-=0.1'
      );
  });
</script>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(
      135deg,
      var(--bg-dark) 0%,
      var(--bg) 50%,
      var(--bg-light) 100%
    );
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .avatar-container {
    position: relative;
  }

  .avatar {
    border-radius: 50%;
    border: 4px solid var(--primary);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease;
  }

  .avatar:hover {
    transform: scale(1.05);
  }

  .text-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .name {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: var(--text);
    margin: 0;
    background: linear-gradient(135deg, var(--text) 0%, var(--primary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title {
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    color: var(--text-muted);
    margin: 0;
    font-weight: 400;
  }

  .location {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin: 0;
  }

  .contact-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    justify-content: center;
    margin: 1rem 0;
  }

  .contact-link {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    border: 1px solid var(--border-muted);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    white-space: nowrap;
  }

  .contact-link:hover {
    color: var(--primary);
    border-color: var(--primary);
    transform: translateY(-2px);
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .btn {
    padding: 0.8rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
  }

  .btn-primary {
    background: var(--primary);
    color: var(--bg);
  }

  .btn-primary:hover {
    background: var(--text);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: var(--primary);
    border-color: var(--primary);
  }

  .btn-secondary:hover {
    background: var(--primary);
    color: var(--bg);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1rem;
    }

    .contact-info {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
    }

    .btn {
      width: 100%;
      max-width: 200px;
    }
  }
</style>
